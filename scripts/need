#!/usr/bin/env sh

flag=$1
shift

while [ -n "$1" ]
do

dir=$1
lib=$(basename $dir)

if [ -n "$ROOTDIR" ]
then
  dir=$ROOTDIR/$dir
fi

PKG_CONFIG_PATH=$dir pkg-config --define-variable=prefix=$dir $flag $lib

for dep in $(grep Requirez: $dir/$lib.pc | cut -c 11-)
do
  need $flag $dep
done

shift
done
